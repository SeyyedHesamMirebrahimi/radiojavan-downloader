{
  "name": "RadioJavan Downloader",
  "description": "A simple google chrome extension to add download buttons to RadioJavan's tracks and podcasts.",
  "version": "1.0.0",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "http://*/*",
    "https://*/*",
    "https://www.radiojavan.com/*"
  ],
  "background": {
    "scripts": [
      "./background.js"
    ]
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
